<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/primary_dark" />
            <gradient android:angle="-90" android:startColor="@color/primary" android:endColor="@color/primary_darker"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/primary_dark" />
            <solid android:color="@color/primary"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/primary" />
            <gradient android:angle="-90" android:startColor="@color/primary_dark" android:endColor="@color/primary_darker" />
        </shape>
    </item>
</selector>